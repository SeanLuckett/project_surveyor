<section class="add-question">
  <div class="row">
    <div class="col-sm-12">
      <h1 class="h3 text-center">Add a multiple choice question:</h1>
    </div>
    <div class="col-sm-4 offset-sm-2 border border-dark border-left-0 border-bottom-0 border-top-0">
      <h2 class="h5">1. Select options</h2></div>
    <div class="col-sm-6"><h2 class="h5"><span class="text-secondary">2. Add question text</span></h2></div>
  </div>
  <div class="row top-buffer">
    <div class="col-sm-12">
      <%= form_for question, url: survey_build_question_path(survey), method: :get do |form| %>
          <div class="form-group">
            <label for="num_options"><em>How many options should the question have?</em></label>
            <%= select_tag :num_options,
                           options_for_select(%w(1 2 3 4 5)),
                           class: 'form-control' %>
          </div>

          <div class="form-group">
            <p><em>How many options can be selected?</em></p>
            <div class="form-check">
              <label class="form-check-label">
                <%= form.radio_button :multipart, false,
                                      class: 'form-check-input' %>
                Just one
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <%= form.radio_button :multipart, true,
                                      class: 'form-check-input' %>
                Multiple
              </label>
            </div>
          </div>

          <div class="form-group">
            <p><em>Is this question required?</em></p>
            <div class="form-check">
              <label class="form-check-label">
                <%= form.radio_button :required, true,
                                      class: 'form-check-input' %>
                Yes
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <%= form.radio_button :required, false,
                                      class: 'form-check-input' %>
                No
              </label>
            </div>
            <%= form.submit 'Continue to next step',
                            class: 'btn btn-primary btn-block top-buffer' %>
          </div>
      <% end %>
    </div>
  </div>
</section>